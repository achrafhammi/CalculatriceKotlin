<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/inputBg"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/purple_200"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textColor="@color/white"
            android:textSize="45dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.89"
        android:layout_margin="10dp"
        android:background="@color/calcBg"
        android:backgroundTint="@color/black"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:text="C"
                android:textStyle="bold"
                android:textColor="#770737"
                android:textSize="35sp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/parLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:width="1dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text="("
                android:textColor="@color/white"
                android:textSize="35sp" />

            <android.widget.Button
                android:id="@+id/parRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:width="1dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="35sp" />
            <android.widget.Button
                android:id="@+id/del"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:text="←"
                android:textStyle="bold"
                android:textColor="#770737"
                android:textSize="35sp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

        </TableRow>
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/num7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="7"
                android:textSize="35sp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/num_8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="8"
                android:textSize="35sp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/num_9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:textColor="@color/white"
                android:text="9"
                android:textSize="35sp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/divide"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text="÷"

                android:textColor="@color/white"
                android:textSize="35sp" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/num_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="4"
                android:textSize="35sp"
                android:layout_marginVertical="5dp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/num_5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="5"
                android:textSize="35sp"
                android:layout_marginVertical="5dp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/num_6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="6"
                android:textSize="35sp"

                android:layout_margin="5dp"
                android:layout_marginVertical="5dp"

                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/multiply"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:width="1dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text="×"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/num_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="1"
                android:textSize="35sp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/num_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="2"
                android:textSize="35sp"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/num_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="3"
                android:textSize="35sp"

                android:layout_margin="5dp"
                android:background="@drawable/rounded_button"
                />

            <android.widget.Button
                android:id="@+id/minux"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_marginVertical="5dp"
                android:layout_weight="1"
                android:width="1dp"

                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.widget.Button
                android:id="@+id/num_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/gray"
                android:width="1dp"
                android:textColor="@color/white"
                android:text="0"
                android:textSize="35sp"
                android:background="@drawable/rounded_button"
                android:layout_margin="5dp"/>

            <android.widget.Button
                android:id="@+id/point"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text="."
                android:textColor="@color/white"
                android:textSize="35sp" />

            <android.widget.Button
                android:id="@+id/percent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:width="1dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:ellipsize="end"
                android:gravity="center"
                android:text="%"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <android.widget.Button
                android:id="@+id/plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:width="1dp"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/gray"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="35sp" />

        </TableRow>
    </TableLayout>
</LinearLayout>